<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Update a User</title>
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <!-- <%= JSON.stringify(userEdit) %> -->
    <div class="topnav">
      <a href="/">Home</a>
      <a href="/create">Create Users</a>
    </div>

    <div class="form-add-new">
      <form action="/update-user" method="POST">
        <fieldset>
          <legend>Update a User</legend>
          <div class="input-group d-none">
            <label>Id:</label>
            <input
              type="text"
              id="id"
              name="userId"
              value="<%= userEdit.id %>"
            />
          </div>
          <div class="input-group">
            <label>Email:</label>
            <input
              type="text"
              id="emailId"
              name="email"
              value="<%= userEdit.email %>"
            />
          </div>
          <div class="input-group">
            <label>Name:</label>
            <input
              type="text"
              id="name"
              name="name"
              value="<%= userEdit.name %>"
            />
            />
          </div>
          <div class="input-group">
            <label>City:</label>
            <input
              type="text"
              id="city"
              name="city"
              value="<%= userEdit.city %>"
            />
          </div>
          <div>
            <button type="submit">Save</button>
          </div>
        </fieldset>
      </form>
    </div>
  </body>
</html>
