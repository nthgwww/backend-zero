<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Homepage</title>
    <link rel="stylesheet" href="/css/style.css" />
    <style>
      .table-container {
        padding: 15px 20px;
      }
      .title {
        font-size: 25px;
        font-weight: 600;
        padding-bottom: 10px;
      }
      table {
        border-collapse: collapse;
        width: 100%;
      }

      th,
      td {
        padding: 8px;
        text-align: left;
        border-bottom: 1px solid #ddd;
      }

      tr:hover {
        background-color: #cccc;
      }

      .btn {
        padding: 5px 10px;
        font-size: 14px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        text-decoration: none;
        color: white;
      }

      .btn-edit {
        background-color: #4caf50; /* Green */
      }

      .btn-delete {
        background-color: #f44336; /* Red */
      }

      .btn:hover {
        opacity: 0.8;
      }
    </style>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  </head>
  <body>
    <div class="topnav">
      <a class="active" href="/">Home</a>
      <a href="/create">Create Users</a>
    </div>
    <div class="table-container">
      <div class="title">List Users</div>
      <table>
        <tr>
          <th>ID</th>
          <th>Email</th>
          <th>Name</th>
          <th>City</th>
          <th>Actions</th>
        </tr>

        <!-- <% for (let i=0; i < listUsers.length; i++) { %>
        <tr>
          <td><%= listUsers[i].id %></td>
          <td><%= listUsers[i].email %></td>
          <td><%= listUsers[i].name %></td>
          <td><%= listUsers[i].city %></td>
          <td>
            <button>Edit</button>
            <button>Delete</button>
          </td>
        </tr>
        <% } %> -->

        <% listUsers.forEach(function(user) { %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.email %></td>
          <td><%= user.name %></td>
          <td><%= user.city %></td>
          <td>
            <a href="/update/<%= user.id %>" class="btn btn-edit">Edit</a>
            <form action="/delete-user" method="POST" style="display: inline">
              <input type="hidden" name="userId" value="<%= user.id %>" />
              <button type="submit" class="btn btn-delete">Delete</button>
            </form>
          </td>
        </tr>
        <% }) %>
      </table>
    </div>
    <script>
      // Kiểm tra nếu có thông báo từ server
      <% if (typeof successMessage !== "undefined") { %>
        Swal.fire({
          icon: "success",
          title: "Success",
          text: "<%= successMessage %>",
          confirmButtonText: "OK",
        });
      <% } %>
      <% } %>
    </script>
  </body>
</html>
